/>

<script is:inline>
  if (typeof window !== "undefined") {
    const script = document.createElement("script");
    script.src = "https://comment.haramuko.site/js/cusdis.es.js";
    script.async = true;
    script.defer = true;
    document.body.appendChild(script);
  }
</script>
